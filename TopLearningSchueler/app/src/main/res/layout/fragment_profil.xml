<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.example.daniel.toplearningschueler.Profil">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:text="Name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="190dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_name" />

    <TextView
        android:text="Adresse"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_adresse" />

    <TextView
        android:text="Email"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_email" />

    <TextView
        android:text="Telefon"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_telefon" />

    <TextView
        android:text="Geburtsdatum"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_birthday" />

    <Button
        android:text="Profil verwalten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:id="@+id/btn_pv" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/profil"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="140dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/iv_profilbild" />


</FrameLayout>
